<!-- Domo-Think theme resources -->
    
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Domo_Think_UApp.Styles">

    <Color x:Key="DBackgroundColor">LightGray</Color>
    <Color x:Key="DPrimaryColor">#03A9F4</Color>
    <Color x:Key="DPrimaryColorDark">#0288D1</Color>

    <SolidColorBrush x:Key="DBackgroundColorBrush" Color="{StaticResource DBackgroundColor}"></SolidColorBrush>
    <SolidColorBrush x:Key="DPrimaryColorBrush" Color="{StaticResource DPrimaryColor}"></SolidColorBrush>
    <SolidColorBrush x:Key="DPrimaryColorDarkBrush" Color="{StaticResource DPrimaryColorDark}"></SolidColorBrush>
    
</ResourceDictionary>
