<ContentDialog
    x:Class="DomoThink.Views.Login.RegisterDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DomoThink.Views"
    xmlns:viewModel="using:DomoThink.ViewModels.Accounts"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Name="REGISTER_DIALOG"
    Title="REGISTER ACCOUNT">

    <!-- Data Context -->
    <ContentDialog.DataContext>
        <viewModel:RegisterViewModel />
    </ContentDialog.DataContext>

    <!-- Main Grid -->
    <Grid x:Name="MAIN_GRID" Margin="0,12,0,0">
        <!-- Grid Row definitions -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <!-- Account informations panel -->
        <StackPanel Grid.Row="0">
            <StackPanel>
                <TextBlock x:Uid ="Username" Text="[Username]" />
                <TextBox Text="{Binding AccountInformations.Username}" />
            </StackPanel>

            <StackPanel>
                <TextBlock x:Uid="Password" Text="[Password]" />
                <PasswordBox Password="{Binding AccountInformations.Password}" />
            </StackPanel>

            <StackPanel>
                <TextBlock x:Uid="PasswordConfirmation" Text="[Password confirmation]" />
                <PasswordBox Password="{Binding AccountInformations.PasswordConfirmation}"/>
            </StackPanel>

        </StackPanel>

        <!-- Buttons panel -->
        <StackPanel Grid.Row="1" Margin="0,24,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Button x:Uid="OkButton" 
                        Grid.Column="0" 
                        Content="[Ok]" 
                        HorizontalAlignment="Stretch" 
                        Margin="0,0,8,0"
                        Command="{Binding RegisterCommand}"
                        CommandParameter="{Binding ElementName=REGISTER_DIALOG}" />
                
                <Button x:Uid="CancelButton" 
                        Grid.Column="1" 
                        Content="[Cancel]" 
                        HorizontalAlignment="Stretch" 
                        Margin="8,0,0,0" 
                        Command="{Binding CancelCommand}"
                        CommandParameter="{Binding ElementName=REGISTER_DIALOG}"/>
            </Grid>
        </StackPanel>
    </Grid>
</ContentDialog>
