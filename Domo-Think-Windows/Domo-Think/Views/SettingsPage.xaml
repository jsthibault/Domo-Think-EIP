<Page
    x:Class="DomoThink.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DomoThink.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
            <TextBlock Text="Application settings" FontSize="20" Margin="10" />

            <StackPanel Margin="10,20,0,0">
                <TextBlock Text="Enable the notifications" />
                <ToggleSwitch OffContent="Off" OnContent="On" />
            </StackPanel>

            <StackPanel Margin="10,20,0,0">
                <TextBlock Text="Theme" />
                <ComboBox SelectedIndex="0">
                    <ComboBoxItem Content="Windows Generic" />
                    <ComboBoxItem Content="DomoThink Light" />
                    <ComboBoxItem Content="DomoThink Dark" />
                </ComboBox>
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
